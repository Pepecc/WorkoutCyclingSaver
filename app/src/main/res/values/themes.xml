<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoDAM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="FondoMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/fondomenu</item>"
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datePickerTheme" parent="Theme.MaterialComponents.Light.Dialog" >
        <item name="android:colorAccent">#ffd600</item>
    </style>

    <style name="botoncolor">
        <item name="color">@color/black</item>
    </style>

    <style name="cuadroDialogo" parent ="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">#616161</item>
        <item name="android:fontFamily">@font/staatlichesreg</item>
        <item name="android:textAlignment">center</item>
        <item name="android:colorSecondary">@color/black</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>