<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    android:foreground="?attr/selectableItemBackground"
    tools:context=".Historial">

    <TextView
        android:id="@+id/TVtituloHist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bangers_font"
        android:text="Mis Entrenamientos"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDatosTotales"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/BTadd_train_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/staatlichesreg"
        android:foreground="?attr/selectableItemBackground"
        android:text="AÃ±adir nuevo entrenamiento"
        android:textSize="20sp" />


</FrameLayout>