<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    tools:context=".visor_bicicletas">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/verderolo"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/TVtitleBicis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Merida scultura 4000"
            android:fontFamily="@font/bangers_font"
            android:textColor="#0d47a1"
            android:textSize="26sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVfechaCompraBisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="Fecha de compra"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:layout_marginStart="45sp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVtitleVisorIndoor" />

        <TextView
            android:id="@+id/TVfechaVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="253dp"
            android:layout_marginStart="200dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="25/04/2021" />

        <View
            android:id="@+id/barra_separadora"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="1dp"
            android:layout_marginTop="290dp"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/ImagenBici"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="0sp"
            android:src="@drawable/fondo_mybikes"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/TVKM_TitleVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginStart="45sp"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:textSize="20sp"
            android:text="KM RECORRIDOS" />

        <TextView
            android:id="@+id/kmodometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="313dp"
            android:layout_marginStart="200dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="10000" />

        <View
            android:id="@+id/barra_separadora2"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="1dp"
            android:layout_marginTop="350dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TVKM_TipobiciVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginStart="45sp"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:textSize="20sp"
            android:text="tipo de bici" />

        <TextView
            android:id="@+id/TVTipoBiciVisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="373dp"
            android:layout_marginStart="200dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Flaca" />

        <Button
            android:id="@+id/BTborrarBicicleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/staatlichesreg"
            android:foreground="?attr/selectableItemBackground"
            android:text="Eliminar bicicleta"
            android:textColor="#0d47a1"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>