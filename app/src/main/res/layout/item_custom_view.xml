<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#f57c00"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVcardFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/staatlichesreg"
                android:textSize="18sp"
                android:textColor="#212121"
                tools:text="24 de abril de 2021  18:30" />


            <TextView
                android:id="@+id/TVcardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="30dp"
                android:fontFamily="@font/bangers_font"
                android:textAlignment="viewStart"
                android:textColor="#212121"
                android:textSize="25sp"
                app:drawableLeftCompat="@drawable/ic_indoor_ico"
                tools:text="Entrenamiento indoor" />

            <TextView
                android:id="@+id/TVcardTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/staatlichesreg"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="#212121"
                android:textSize="18sp"
                tools:text="Duración: 60 minutos" />

            <TextView
                android:id="@+id/TVcalorInd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#212121"
                android:textSize="18sp"
                android:fontFamily="@font/staatlichesreg"
                tools:text="300 calorías" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>