<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    tools:context=".visorTrainIndoor">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#f57c00"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/TVtitleVisorIndoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Entrenamiento indoor"
            android:fontFamily="@font/bangers_font"
            android:textColor="#212121"
            android:textSize="26sp"
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_indoor_ico"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVfechaIndVisorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Fecha"
        android:fontFamily="@font/staatlichesreg"
        android:textColor="#212121"
        android:layout_marginStart="20sp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVtitleVisorIndoor" />

        <View
            android:id="@+id/barra_separadora"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="1dp"
            android:layout_marginTop="150dp"
            android:background="#212121" />

        <TextView
            android:id="@+id/TVpulsMedTitleVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="20sp"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:textSize="20sp"
            android:text="PULSO MEDIO" />

        <TextView
            android:id="@+id/TVpulsMedvisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="150 ppm" />

        <TextView
            android:id="@+id/TVpulsMaxTitleVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/staatlichesreg"
            android:text="PULSO MÁXIMO"
            android:textColor="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TVpulsMaxvisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginStart="220dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="180 ppm" />

        <View
            android:id="@+id/barra_separadora2"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="1dp"
            android:layout_marginTop="270dp"
            android:background="#212121" />

        <TextView
            android:id="@+id/TVfechaVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="25/04/2021" />

        <TextView
            android:id="@+id/TVduracionVisorIDTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:layout_marginStart="25dp"
            android:layout_marginTop="300dp"
            android:textSize="20sp"
            android:text="Duración" />

        <TextView
            android:id="@+id/TVduracVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="300 minutos" />

        <TextView
            android:id="@+id/TVcaloriasVisorIDTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:layout_marginStart="220dp"
            android:layout_marginTop="300dp"
            android:textSize="20sp"
            android:text="Calorías" />

        <TextView
            android:id="@+id/TVcalorVisorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginStart="220dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="300 kcal" />

        <View
            android:id="@+id/barra_separadora3"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="1dp"
            android:layout_marginTop="390dp"
            android:background="#212121" />

        <TextView
            android:id="@+id/TVnotsVisorIDTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatlichesreg"
            android:textColor="#212121"
            android:layout_marginStart="20dp"
            android:layout_marginTop="420dp"
            android:textSize="20sp"
            android:text="Notas" />

        <TextView
            android:id="@+id/TVnotesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Mucho sudor, muy cansancio" />

        <Button
            android:id="@+id/BTborrarTrainID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="530dp"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/staatlichesreg"
            android:foreground="?attr/selectableItemBackground"
            android:text="Eliminar entrenamiento"
            android:textColor="#212121"
            android:textSize="20sp" />





    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>