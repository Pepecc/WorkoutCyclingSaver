<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoapp"
    tools:context=".Estadisticas">

    <TextView
        android:id="@+id/TVtitleStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bangers_font"
        android:text="Estadísticas totales"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TVtitleperc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sesiones de entrenamiento"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/staatlichesreg"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#eeeeee"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="2">


        <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/CVstatsFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#eeeeee"
 />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TVtitleKMtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horas de entrenamiento"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/staatlichesreg"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewKMtotal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="2">


            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/CVstatsSecond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="#eeeeee"
                >


            </com.github.mikephil.charting.charts.HorizontalBarChart>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Caloriastot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorías quemadas"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/staatlichesreg"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewcals"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="2">


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/CVstatsThird"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="#eeeeee"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TVpulso_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/staatlichesreg"
        android:text="VALORES CARDÍACOS"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvCardios"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="2">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/CVstatsFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="#eeeeee"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TVvelo_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VALORES DE VELOCIDAD"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/staatlichesreg"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVelo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="2">


            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/CVstatsFifth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="#eeeeee"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
</ScrollView>