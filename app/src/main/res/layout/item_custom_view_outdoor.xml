<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTrainOutdoor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#f57c00"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVcardFechaOutdoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#212121"
                android:fontFamily="@font/staatlichesreg"
                android:textSize="18sp"
                tools:text="24 de abril de 2021  18:30" />

            <TextView
                android:id="@+id/TVcardTitleOutdoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:drawablePadding="-20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bangers_font"
                android:drawableLeft="@drawable/ic_outdoor_train"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="25sp"
                tools:text="Entrenamiento outdoor" />


            <TextView
                android:id="@+id/TVcardTotalTimeOutdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="#212121"
                android:fontFamily="@font/staatlichesreg"
                android:textSize="18sp"
                tools:text="Duración: 2:05" />

            <TextView
                android:id="@+id/TVcalorOutdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/staatlichesreg"
                android:textColor="#212121"
                android:textSize="18sp"
                tools:text="3000 calorías" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="115dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TVkmOutdoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="160.0 kilómetros"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/staatlichesreg"
                android:textColor="#212121"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>