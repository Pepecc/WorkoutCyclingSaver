<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTimeSplit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#bdbdbd"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/TVcardLapTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:textColor="#212121"
            android:textAlignment="viewStart"
            android:fontFamily="@font/staatlichesreg"
            android:textSize="20sp"
            tools:text="Vuelta: 1" />

            <TextView
                android:id="@+id/TVcardTimeTotalTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:drawablePadding="-80dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/staatlichesreg"
                android:textAlignment="center"
                android:drawableLeft="@drawable/ic_tiempots"
                android:textColor="#212121"
                android:textSize="30sp"
                tools:text="22 min : 50 sec" />

            <TextView
                android:id="@+id/TVcardTramoTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="#212121"
                android:fontFamily="@font/staatlichesreg"
                android:textSize="20sp"
                tools:text="Serra - cima oronet" />

            <TextView
                android:id="@+id/TVcardNotasTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/staatlichesreg"
                android:textColor="#212121"
                android:textSize="20sp"
                tools:text="Subida a todo gas" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>